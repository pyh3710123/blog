<style>
    #itemContainer>li{
        list-style: none;
    }
    #itemContainer>li>div{
        width: 100%;
        height: 150px;
        border: 1px solid;
    }
    #itemContainer{
        margin-top: 50px;
    }
    #sayBlog{
        display: none;
    }
    .del{
        float: right;
    }
    #comment>li{
        list-style: none;
        width: 100%;
        height: 70px;
        border: 1px solid;
    }
</style>
<div class="container" style="margin-top: 100px">
    {{#each user}}
        <div class="blog-header">
            <h1 class="blog-title">{{realname}}的博客之家</h1>
            <p class="lead blog-description">这是这篇博客的详细内容</p>
            <img src="{{picture}}" alt="..." class="img-thumbnail" style="width: 140px;height: 140px">
            <p>用户名：{{username}}</p>
            <p>年龄：{{age}}</p>
            <p>邮箱：{{email}}</p>
        </div>
    {{/each}}
    <div class="row">
        <div class="col-sm-8 blog-main">
            <div class="holder"></div>
            <ul id="itemContainer">
                {{#each blog}}
                    <li>
                        <p>标题：{{title}}</p>
                        <p>发布时间：{{createdAt}}</p>
                        <div>{{content}}</div>
                        <span>喜欢{{like}}</span>
                        <span>讨厌{{hate}}</span>
                    </li>
                {{/each}}
            </ul>
            <div class="blog-header">
             <h1>热门评论</h1>
                <ul id="comment">
                    {{#each blog}}
                        {{#each commentText}}
                          <li>
                              <spanp>用户：{{phone}}</spanp>
                              <span>：{{comment}}</span>
                          </li>
                        {{/each}}
                    {{/each}}
                </ul>

            </div>
        </div><!-- /.blog-main -->


