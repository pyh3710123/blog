<script>
$(function () {
    $('#Error').hide()
    $('#inputEmail3').blur(function () {
        checkPhone()
    })
})
function checkPhone() {
    var para='phone='+$('#inputEmail3').val();

    $.ajax({
        url:'/users/check-phone',
        type:'POST',
        async:true,
        data:para,
        success:function (res) {
          if(res.errorMsg){
              alert("ssss")
                $('#Error').show()
                $('#Error').html(res.errorMsg)
            }else {
                $('#Error').hide()
            }

        }

    })
}
function checkData() {
    var ret=true;

    if(!validator.isMobilePhone($('#inputEmail3').val(),"zh-CN")){
        alert("电话号码位数错误");
        ret=false;
    }
    if(!validator.isLength($('#inputPassword3').val(),{min:6,max:8})){
        alert("密码位数有误");
        ret=false;
    }
    if(!validator.isLength($('#inputPassword4').val(),{min:6,max:8})){
        alert("密码位数有误");
        ret=false;
    }
    if(($('#inputPassword3').val()!==$('#inputPassword4').val())){
        alert("密码不相等");
        ret=false;
    }

    if(ret&&$('#Error').hide()){
        signUp()
    }else{
        alert("输入有误，请核对")
    }
}

function signUp() {
  var para=$('#sign-up-form').serialize();
    alert(para);
    $.ajax({
        url:'/users/sign-up',
        type:'POST',
        async:true,
        data:para,
        success:function (res) {
            if (res.code==1){
                window.location.href=res.url;
            }
            if(res.captchaErrorMsg){
                alert("验证码错误")
            }


        }
    })


}
    function changIMG() {
        var svg='captcha/?='+Date.now()+Math.random();
        $('#changeImg').attr('src',svg)
    }
function changIMGIN() {
    var svg='captcha/?='+Date.now()+Math.random();
    $('#changeImg-sign-in').attr('src',svg)
}



function signIn() {
var para=$('#sign-in-form').serialize();
    $.ajax({
        url:'/users/sign-in',
        type:'POST',
        async:true,
        data:para,
        success:function (res) {
            if(res.captchaErrorMsg){
                alert("验证码错误")
            }
            if(res){
                console.log(res.url)
                window.location.href=res.url
            }
        }
    })



}
</script>
